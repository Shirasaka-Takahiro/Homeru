<h1>ユーザー一覧画面</h1>
<%= form_tag(admin_users_path, :method => 'get') do %>
  <div class="user_search">
    <%= text_field_tag :search,'', placeholder: "名前を入力" %>
    <%= submit_tag "名前を検索", :name => nil, class: "btn primary" %>
  </div>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">名前</th>
      <th scope="col">作成日</th>
      <th scope="col">その他</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= link_to user.username, user_path(user.id) %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to '削除', user_path(user.id), method: :delete, data: { confirm:"削除してもよろしいですか？" }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination"><%= paginate @user %></div>