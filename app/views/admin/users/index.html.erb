<h1>ユーザー一覧画面</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">名前</th>
      <th scope="col">作成日</th>
      <th scope="col">その他</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.username %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to '削除', user_path(user.id), method: :delete, data: { confirm:"削除してもよろしいですか？" }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
  <%= paginate @users %>
</table>