<% if user_signed_in? %>
  <% if report.favorited_by?(current_user) %>
    <p><i class="fas fa-heart"><%= link_to report.favorites.count, report_favorites_path(report.id), method: :delete %></i></p>
  <% else %>
    <p><i class="fas fa-heart"><%= link_to report.favorites.count, report_favorites_path(report.id), method: :post %></i></p>
  <% end %>
<% else %>
  <p><%= report.favorites.count %></p>
<% end %>